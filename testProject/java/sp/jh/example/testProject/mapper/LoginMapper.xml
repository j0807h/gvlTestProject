<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sp.jh.example.testProject.mapper.LoginMapper">
<sql id="basecolumn">
		USER_ID userId, USER_PW userPw, NAME name
</sql>

<select id="getUsers" parameterType="sp.jh.example.testProject.domain.LoginDTO"
	 resultType="sp.jh.example.testProject.domain.LoginDTO">
	select user_id, user_pw, name
	from user
	where user_id = #{userId}
</select>
<insert id="registUsers" parameterType="sp.jh.example.testProject.domain.LoginDTO">
	insert into user ( <include refid="basecolumn" />  )
	values(#{userId},#{userPw},#{userName})
</insert>
</mapper>